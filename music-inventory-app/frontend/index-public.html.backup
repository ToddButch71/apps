            padding-top: 20px;
            border-top: 2px solid #f0f0f0;
        }
        
        .stat-card.expanded .stat-details {
            display: block;
        }

        .stat-breakdown-item {
            display: flex;
            align-items: center;
            margin: 10px 0;
            font-size: 0.9em;
        }

        .stat-breakdown-label {
            flex: 0 0 120px;
            color: #555;
            font-weight: 500;
        }

        .stat-breakdown-bar {
            flex: 1;
            height: 24px;
            background: #f5f5f5;
            border-radius: 12px;
            overflow: hidden;
            margin: 0 12px;
        }

        .stat-breakdown-fill {
            height: 100%;
            background: linear-gradient(90deg, #ff9800, #f57c00);
            transition: width 0.5s ease;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding-right: 8px;
            color: white;
            font-size: 0.8em;
            font-weight: 600;
        }

        .stat-breakdown-count {
            color: #666;
            font-weight: 600;
            min-width: 50px;
            text-align: right;
        }
        
        .expand-indicator {
            color: #ff9800;
            font-size: 0.75em;
            margin-top: 8px;
            font-weight: 600;
        }

        .stat-card.expanded .expand-indicator::before {
