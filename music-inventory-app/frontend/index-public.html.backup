                        <div class="stat-value" id="topArtistCount">0</div>
                        <div class="stat-label">Top Artist</div>
                        <div class="stat-sublabel" id="topArtistName">--</div>
                        <div class="expand-indicator">‚ñº</div>
                        <div class="stat-details" id="artistDetails"></div>
                    </div>
                </div>
            </div>
            
            <!-- Row 3: Timeline -->
            <div class="stat-section">
                <h3 class="stat-section-title">Timeline</h3>
                <div class="stat-row">
                    <div class="stat-card">
                        <div class="stat-icon">üìª</div>
                        <div class="stat-value" id="oldestYear">--</div>
                        <div class="stat-label">Oldest</div>
                        <div class="stat-sublabel" id="oldestAlbum">--</div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon">üìÖ</div>
                        <div class="stat-value" id="yearSpan">0</div>
                        <div class="stat-label">Year Span</div>
                        <div class="stat-sublabel" id="yearRange">--</div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon">üÜï</div>
                        <div class="stat-value" id="newestYear">--</div>
                        <div class="stat-label">Newest</div>
                        <div class="stat-sublabel" id="newestAlbum">--</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="realtime-indicator" id="realtimeIndicator" title="Click for sync details">
        <span class="indicator-icon">‚úì</span>
        <div class="indicator-tooltip" id="indicatorTooltip">
            <div class="tooltip-row">
                <span class="tooltip-label">Status:</span>
                <span id="syncStatus">Connected</span>
            </div>
            <div class="tooltip-row">
                <span class="tooltip-label">Last Check:</span>
                <span id="lastCheck">Just now</span>
            </div>
            <div class="tooltip-row">
                <span class="tooltip-label">Records:</span>
                <span id="recordCount">0</span>
            </div>
        </div>
    </div>

    <script>
        // API URL configuration - dynamically constructed based on current hostname
        const API_URL = window.location.protocol + '//' + window.location.hostname + ':8000';
        
        // Fetch data from backend API
        let musicData = [];
        let lastRecordCount = 0;
        let lastCheckTime = new Date();
        let syncCheckInterval = null;

        async function loadInventory() {
            const indicator = document.getElementById('realtimeIndicator');
            const icon = indicator?.querySelector('.indicator-icon');
            
            try {
                // Show syncing state
                if (indicator) {
                    indicator.classList.add('syncing');
                    if (icon) icon.textContent = '‚Üª';
                }
                
                const response = await fetch(API_URL + '/inventory');
                if (response.ok) {
                    const data = await response.json();
                    const previousCount = musicData.length;
                    musicData = data;
                    renderTable();
                    updateStats();
                    
                    // Update sync status
                    updateSyncStatus('success', data.length, previousCount);
                } else {
                    console.error('Failed to load inventory');
                    updateSyncStatus('error');
                }
            } catch (error) {
                console.error('Error loading inventory:', error);
                updateSyncStatus('error');
            }
        }
        
        function updateSyncStatus(status, currentCount = 0, previousCount = 0) {
            const indicator = document.getElementById('realtimeIndicator');
            const icon = indicator?.querySelector('.indicator-icon');
            const statusText = document.getElementById('syncStatus');
            const lastCheckText = document.getElementById('lastCheck');
            const recordCountText = document.getElementById('recordCount');
            
            if (!indicator) return;
            
            // Remove all status classes
            indicator.classList.remove('syncing', 'error', 'updated');
            
            lastCheckTime = new Date();
            
            if (status === 'success') {
                if (currentCount !== previousCount && previousCount > 0) {
                    // Data changed
                    indicator.classList.add('updated');
                    if (icon) icon.textContent = '‚òÖ';
                    if (statusText) statusText.textContent = 'Updated!';
                    
                    // Reset to normal after 3 seconds
                    setTimeout(() => {
                        indicator.classList.remove('updated');
                        if (icon) icon.textContent = '‚úì';
                        if (statusText) statusText.textContent = 'Connected';
                    }, 3000);
                } else {
                    // Normal connected state
                    if (icon) icon.textContent = '‚úì';
                    if (statusText) statusText.textContent = 'Connected';
                }
                
                if (recordCountText) recordCountText.textContent = currentCount;
                lastRecordCount = currentCount;
            } else if (status === 'error') {
                indicator.classList.add('error');
                if (icon) icon.textContent = '‚úó';
                if (statusText) statusText.textContent = 'Error';
            }
            
            if (lastCheckText) {
                lastCheckText.textContent = formatLastCheck(lastCheckTime);
            }
        }
        
        function formatLastCheck(date) {
            const now = new Date();
            const diffMs = now - date;
            const diffSec = Math.floor(diffMs / 1000);
            const diffMin = Math.floor(diffSec / 60);
            
            if (diffSec < 10) return 'Just now';
            if (diffSec < 60) return `${diffSec}s ago`;
            if (diffMin < 60) return `${diffMin}m ago`;
            
            return date.toLocaleTimeString();
        }
        
        function initRealtimeIndicator() {
            const indicator = document.getElementById('realtimeIndicator');
            const tooltip = document.getElementById('indicatorTooltip');
            
            if (!indicator || !tooltip) return;
            
            // Toggle tooltip on click
            indicator.addEventListener('click', (e) => {
                e.stopPropagation();
                tooltip.classList.toggle('show');
            });
            
            // Close tooltip when clicking outside
            document.addEventListener('click', () => {
                tooltip.classList.remove('show');
            });
            
            // Prevent tooltip from closing when clicking inside it
            tooltip.addEventListener('click', (e) => {
                e.stopPropagation();
            });
            
            // Update "last check" time every 10 seconds
            setInterval(() => {
                const lastCheckText = document.getElementById('lastCheck');
                if (lastCheckText) {
                    lastCheckText.textContent = formatLastCheck(lastCheckTime);
                }
            }, 10000);
            
            // Auto-refresh every 12 hours to check for updates
            syncCheckInterval = setInterval(() => {
                loadInventory();
            }, 43200000); // 12 hours in milliseconds
        }

        document.addEventListener('DOMContentLoaded', () => {
            // Initialize the app
            initApp();
            
            // Load inventory from backend
            loadInventory();
            
            // Initialize realtime sync indicator
            initRealtimeIndicator();
        });

        function initApp() {
            // Render initial table
            renderTable();
            
            // Add search functionality
            setupSearch();
            
            // Add sorting functionality
            setupSorting();
            
            // Add refresh button handler
            document.getElementById('refreshBtn').addEventListener('click', () => {
                setTimeout(() => { 
                    renderTable();
                    updateStats(); 
                }, 500);
            });
            
            // Initialize stats
            updateStats();
        }

        let currentSortColumn = 'artist';
        let currentSortDirection = 'asc';

        function setupSorting() {
            const sortableHeaders = document.querySelectorAll('th.sortable');
            sortableHeaders.forEach(header => {
                header.addEventListener('click', () => {
                    const column = header.dataset.column;
                    
                    // Toggle direction if clicking the same column
                    if (currentSortColumn === column) {
                        currentSortDirection = currentSortDirection === 'asc' ? 'desc' : 'asc';
                    } else {
                        currentSortColumn = column;
                        currentSortDirection = 'asc';
                    }
                    
                    // Update header classes
                    sortableHeaders.forEach(h => {
                        h.classList.remove('asc', 'desc');
                    });
                    header.classList.add(currentSortDirection);
                    
                    // Re-render table with new sort
                    renderTable();
                });
            });
            
            // Set initial sort indicator on artist column
            const artistHeader = document.querySelector('th[data-column="artist"]');
            if (artistHeader) {
                artistHeader.classList.add('asc');
            }
        }

        function renderTable() {
            const tbody = document.getElementById('tableBody');
            tbody.innerHTML = '';
            
            // Sort data based on current sort settings
            const sortedData = [...musicData].sort((a, b) => {
                let aVal, bVal;
                
                switch(currentSortColumn) {
                    case 'media':
                        aVal = a.media.toLowerCase();
                        bVal = b.media.toLowerCase();
                        break;
                    case 'artist':
                        aVal = a.artist.toLowerCase();
                        bVal = b.artist.toLowerCase();
                        break;
                    case 'title':
                        aVal = a.titles[0].toLowerCase();
                        bVal = b.titles[0].toLowerCase();
                        break;
                    case 'year':
                        aVal = a.year;
                        bVal = b.year;
                        break;
                    case 'genre':
                        aVal = a.genre.toLowerCase();
                        bVal = b.genre.toLowerCase();
                        break;
                    default:
                        aVal = a.artist.toLowerCase();
                        bVal = b.artist.toLowerCase();
                }
                
                let comparison = 0;
                if (typeof aVal === 'number') {
                    comparison = aVal - bVal;
                } else {
                    comparison = aVal.localeCompare(bVal);
                }
                
                return currentSortDirection === 'asc' ? comparison : -comparison;
            });
            
            sortedData.forEach(item => {
                const row = document.createElement('tr');
                
                // Format titles for display
                const formattedTitles = item.titles.length > 1 ? 
                    `${item.titles[0]} + ${item.titles.length - 1} more` : 
                    item.titles[0];
                
                row.innerHTML = `
                    <td>${item.media.toLowerCase()}</td>
                    <td>${escapeHtml(item.artist)}</td>
                    <td>${formattedTitles}</td>
                    <td>${item.year}</td>
                    <td>${item.serial_number}</td>
                    <td>${item.media_count || 1}</td>
                    <td>${item.genre}</td>
                    <td>${escapeHtml(item.notes || "")}</td>
                `;
                
                tbody.appendChild(row);
            });
        }

        function escapeHtml(unsafe) {
            return unsafe
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }




        function updateStats(dataToAnalyze = musicData) {
            if (dataToAnalyze.length === 0) {
                // Show empty state for all stats
                document.getElementById('totalRecords').textContent = '0';
                document.getElementById('totalItems').textContent = '0';
                document.getElementById('avgMediaCount').textContent = 'No results';
                document.getElementById('genreCount').textContent = '0';
                document.getElementById('topGenre').textContent = 'No results';
                document.getElementById('mediaTypeCount').textContent = '0';
                document.getElementById('topMediaType').textContent = 'No results';
                document.getElementById('newestYear').textContent = '--';
                document.getElementById('newestAlbum').textContent = 'No results';
                document.getElementById('oldestYear').textContent = '--';
                document.getElementById('oldestAlbum').textContent = 'No results';
                document.getElementById('yearSpan').textContent = '0';
                document.getElementById('yearRange').textContent = 'No results';
                document.getElementById('totalArtists').textContent = '0';
                document.getElementById('artistDiversity').textContent = 'No results';
                document.getElementById('topArtistCount').textContent = '0';
                document.getElementById('topArtistName').textContent = 'No results';
                document.getElementById('multiDiscCount').textContent = '0';
                document.getElementById('multiDiscComparison').textContent = 'No results';
                return;
            }
            
            // Collection Insights
            const total = dataToAnalyze.length;
            const totalMediaItems = dataToAnalyze.reduce((sum, item) => sum + (item.media_count || 1), 0);
            const avgMedia = (totalMediaItems / total).toFixed(1);
            
            animateValue('totalRecords', total);
            animateValue('totalItems', totalMediaItems);
            document.getElementById('avgMediaCount').textContent = `Avg: ${avgMedia} per album`;
            
            // Genre Analytics
            const genreMap = new Map();
            dataToAnalyze.forEach(item => {
                const genre = item.genre || 'Unknown';
                genreMap.set(genre, (genreMap.get(genre) || 0) + 1);
            });
            
            const genreCount = genreMap.size;
            const genreArray = Array.from(genreMap.entries()).sort((a, b) => b[1] - a[1]);
            const topGenre = genreArray[0];
            
            animateValue('genreCount', genreCount);
            document.getElementById('topGenre').textContent = `Top: ${topGenre[0]} (${topGenre[1]})`;
            
            // Populate genre details
            const genreDetailsHTML = genreArray.map((g, idx) => {
                const percentage = ((g[1] / total) * 100).toFixed(1);
                return `
                    <div class="stat-detail-row">
                        <span class="stat-detail-label">${idx + 1}. ${g[0]}</span>
                        <span class="stat-detail-value">${g[1]} (${percentage}%)</span>
                    </div>
                    <div class="stat-progress-bar">
                        <div class="stat-progress-fill" style="width: ${percentage}%"></div>
                    </div>
                `;
            }).join('');
            document.getElementById('genreDetails').innerHTML = genreDetailsHTML;
            
            // Media Type Breakdown
            const mediaMap = new Map();
            dataToAnalyze.forEach(item => {
                const media = item.media || 'Unknown';
                mediaMap.set(media, (mediaMap.get(media) || 0) + 1);
            });
            
            const mediaTypeCount = mediaMap.size;
            const mediaArray = Array.from(mediaMap.entries()).sort((a, b) => b[1] - a[1]);
            const topMedia = mediaArray[0];
            
            animateValue('mediaTypeCount', mediaTypeCount);
            document.getElementById('topMediaType').textContent = `Top: ${topMedia[0]} (${topMedia[1]})`;
            
            // Populate media type details
            const mediaDetailsHTML = mediaArray.map((m, idx) => {
                const percentage = ((m[1] / total) * 100).toFixed(1);
                return `
                    <div class="stat-detail-row">
                        <span class="stat-detail-label">${idx + 1}. ${m[0]}</span>
                        <span class="stat-detail-value">${m[1]} (${percentage}%)</span>
                    </div>
                    <div class="stat-progress-bar">
                        <div class="stat-progress-fill" style="width: ${percentage}%"></div>
                    </div>
                `;
            }).join('');
            document.getElementById('mediaTypeDetails').innerHTML = mediaDetailsHTML;
            
            // Timeline Stats
            const years = dataToAnalyze.map(item => item.year);
            const oldestYear = Math.min(...years);
            const newestYear = Math.max(...years);
            const yearSpan = newestYear - oldestYear;
            
            // Find albums for newest and oldest years
            const newestAlbums = dataToAnalyze.filter(item => item.year === newestYear);
            const oldestAlbums = dataToAnalyze.filter(item => item.year === oldestYear);
            const newestAlbum = newestAlbums[0];
            const oldestAlbum = oldestAlbums[0];
            
            document.getElementById('newestYear').textContent = newestYear;
            document.getElementById('newestAlbum').textContent = newestAlbums.length > 1 
                ? `${newestAlbum.artist.substring(0, 20)}... +${newestAlbums.length - 1} more`
                : newestAlbum.artist.substring(0, 25);
            
            document.getElementById('oldestYear').textContent = oldestYear;
            document.getElementById('oldestAlbum').textContent = oldestAlbums.length > 1
                ? `${oldestAlbum.artist.substring(0, 20)}... +${oldestAlbums.length - 1} more`
                : oldestAlbum.artist.substring(0, 25);
            
            animateValue('yearSpan', yearSpan);
            document.getElementById('yearRange').textContent = `${oldestYear} to ${newestYear}`;
            
            // Artist Stats
            const artistMap = new Map();
            dataToAnalyze.forEach(item => {
                const artist = item.artist;
                artistMap.set(artist, (artistMap.get(artist) || 0) + 1);
            });
            
            const totalArtists = artistMap.size;
            const artistArray = Array.from(artistMap.entries()).sort((a, b) => b[1] - a[1]);
            const topArtist = artistArray[0];
            const multiAlbumArtists = artistArray.filter(a => a[1] > 1).length;
            const diversity = (total / totalArtists).toFixed(2);
            
            animateValue('totalArtists', totalArtists);
            document.getElementById('artistDiversity').textContent = `${diversity} albums/artist`;
            
            animateValue('topArtistCount', topArtist[1]);
            document.getElementById('topArtistName').textContent = topArtist[0].substring(0, 25);
            
            // Populate artist details (top 10)
            const artistDetailsHTML = artistArray.slice(0, 10).map((a, idx) => {
                const percentage = ((a[1] / total) * 100).toFixed(1);
                return `
                    <div class="stat-detail-row">
                        <span class="stat-detail-label">${idx + 1}. ${a[0].substring(0, 30)}</span>
                        <span class="stat-detail-value">${a[1]} albums (${percentage}%)</span>
                    </div>
                    <div class="stat-progress-bar">
                        <div class="stat-progress-fill" style="width: ${percentage}%"></div>
                    </div>
                `;
            }).join('');
            const multiArtistNote = multiAlbumArtists > 0 
                ? `<div class="stat-detail-row" style="margin-top: 10px; padding-top: 10px; border-top: 1px solid #e2e8f0;">
                    <span class="stat-detail-label">Artists with 2+ albums</span>
                    <span class="stat-detail-value">${multiAlbumArtists}</span>
                   </div>`
                : '';
            document.getElementById('artistDetails').innerHTML = artistDetailsHTML + multiArtistNote;
            
            // Comparison Stats - Multi-disc albums
            const multiDiscAlbums = dataToAnalyze.filter(item => (item.media_count || 1) > 1).length;
            const multiDiscPercentage = ((multiDiscAlbums / total) * 100).toFixed(1);
            
            animateValue('multiDiscCount', multiDiscAlbums);
            document.getElementById('multiDiscComparison').textContent = `${multiDiscPercentage}% of collection`;
        }
        
        function animateValue(elementId, newValue) {
            const element = document.getElementById(elementId);
            if (!element) return;
            
            const currentValue = parseInt(element.textContent) || 0;
            if (currentValue === newValue) return;
            
            element.classList.add('updated');
            element.textContent = newValue;
            
            setTimeout(() => {
                element.classList.remove('updated');
            }, 500);
        }
        
        function toggleStatCard(card) {
            const wasExpanded = card.classList.contains('expanded');
            
            // Collapse all cards first
            document.querySelectorAll('.stat-card.expanded').forEach(c => {
                c.classList.remove('expanded');
            });
            
            // If this card wasn't expanded, expand it
            if (!wasExpanded) {
                card.classList.add('expanded');
            }
        }

        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            
            searchInput.addEventListener('input', (e) => {
                const searchTerm = e.target.value.toLowerCase().trim();
                
                if (!searchTerm) {
                    // Reset: show all rows and update stats with full collection
                    document.querySelectorAll('#tableBody tr').forEach(row => {
                        row.style.display = '';
                    });
                    updateStats(musicData);
                    return;
                }
                
                // Filter data based on search term
                const filteredData = [];
                
                document.querySelectorAll('#tableBody tr').forEach(row => {
                    const cells = row.querySelectorAll('td');
                    const hasMatch = Array.from(cells).some(cell => 
                        cell.textContent.toLowerCase().includes(searchTerm)
                    );
                    
                    row.style.display = hasMatch ? '' : 'none';
                    
                    // Find the corresponding data item for stats calculation
                    if (hasMatch) {
                        const serialNumber = cells[4].textContent; // Barcode is in 5th column
                        const dataItem = musicData.find(item => item.serial_number === serialNumber);
                        if (dataItem) {
                            filteredData.push(dataItem);
                        }
                    }
                });
                
                // Update stats with filtered data
                updateStats(filteredData);
            });
        }
    </script>
</body>
</html>
