(backup of compose.yaml before edits)

services:
  backend:
    build: ./backend
    volumes:
      - ./backend/data:/data   # persistence for JSON file
    environment:
      - PYTHONUNBUFFERED=1
    expose: ["8000"]
  frontend:
    build: ./frontend
    depends_on: [backend]
    environment:
      - VITE_API_URL=http://backend:8000
    ports:
      - "5173:5173"   # accessible from host
  nginx-proxy:
    image: jwilder/nginx-proxy
    container_name: nginx-proxy
    ports:
      - "8080:5173"
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro
